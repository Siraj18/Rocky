@model IEnumerable<FirtsWork>
@{
	ViewData["Title"] = "Index";
}

<h1>My table</h1>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Work list</h2>
		</div>
		<div class="col-6">
			<a asp-controller="FirstWork" asp-action="Create" class="btn btn-primary">
				Create New Work
			</a>

		</div>
	</div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th>

				</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td width="50%">@obj.Id</td>
					<td width="30%">@obj.Name</td>
					<td></td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p> Work not found </p>
}

